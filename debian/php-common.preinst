#!/bin/sh

set -e

if [ "$1" = install ] || [ "$1" = upgrade ] ; then
    dpkg-divert --add --package php-common --rename \
    		--divert /usr/bin/phar5 \
		/usr/bin/phar
    dpkg-divert --add --package php-common --rename \
		--divert /usr/share/man/man1/phar5.1.gz \
		/usr/share/man/man1/phar.1.gz
fi

#DEBHELPER#

exit 0
